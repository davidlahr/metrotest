<header>
   <nav aria-current="true">
        <ul>
            <div class="nav-buttons">
            <li> <%= link_to "Home", metro_files_path %> </li>
            
            <% if @instances || @minors %>
                <li> <%= link_to "Back to File", @metrofile %> </li>
            <% end %>

             <% if @instance %>
                <li><%= link_to "File Detail", metro_file_instances_path(params[:metro_file_id])%></li>
            <% end %>

            <% if @metro_files %>
                <li><%= link_to "Import New File", metrofile_path%></li>
            <% end %>

            <% if @minors %>
                <li><%= link_to "File Detail", metro_file_instances_path(params[:metro_file_id])%></li>
            <% end %>
            <% if @instances%>
                <li><%= link_to "File Metrics", metro_file_metric_path(params[:metro_file_id])%></li>
            <% end %>

            <% if @metro_file %>
                <li><%= link_to "File Metrics", metro_file_metric_path(@metro_file.id)%></li>
                <li><%= link_to "File Detail", metro_file_instances_path(@metro_file.id)%></li>
            <% end %>

            </div>

            <% if current_user %>
                <% if current_user.role == "Super_Admin" %>
                    <div class="dropdown">
                        <span>Admin Menu</span>
                            <div class="dropdown-content">
                            <p> <%= link_to "Companies", companies_path %> </p>
                            <p> <%= link_to "Users", users_path %> </p>

                    </div>
                <% end %>
            <% end %>

            </div>
             
            <!--<li> <%#= link_to "Home", metro_files_path %> </li>-->
            <div class="nav-sign-in">
            <% if current_user %>
                <li><%="Hello #{current_user.first_name}" %></li>
                <li><%= link_to "Sign Out" ,destroy_user_session_path, data:{ turbo_method: :delete } %></li>

            <% else %>
                <li><%= link_to "Sign In" ,user_session_path ,data:{ turbo_method: :post } %></li>            
            <% end %>
            </div>
        </ul>
   </nav>
</header>